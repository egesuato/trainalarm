<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.egesuato.trainalarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="it.egesuato.trainalarm.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.egesuato.trainalarm.TrainAlarmActivity"
            android:label="@string/title_activity_train_alarm" >
        </activity>
        <activity
            android:name="it.egesuato.trainalarm.ListviewItemRowActivity"
            android:label="@string/title_activity_listview_item_row" >
        </activity>
        
		<service android:enabled="true" android:name="it.egesuato.trainalarm.AlarmService" />
    </application>
</manifest>